<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/title_bar_img_btn_left"
            android:layout_width="@dimen/height_title_bar"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:textSize="@dimen/font_size_title_right_text"

            />

        <TextView
            android:id="@+id/title_bar_tv_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/base_title_text_color"
            android:textSize="@dimen/font_size_title_right_text"
            android:visibility="gone" />


    <LinearLayout
        android:id="@+id/title_bar_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@null"
        android:orientation="vertical">

        <com.hnhz.thziot.ui.widget.MarqueeTextView
            android:id="@+id/title_bar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:ellipsize="marquee"
            android:text="云解析DNS"
            android:textColor="@color/white"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/title_bar_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@null">

            <TextView
                android:id="@+id/title_bar_title_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/title_bar_title_desc_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/title_bar_title_desc_tv"
                android:src="@mipmap/down" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/title_bar_img_btn_right"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center" />

    <TextView
        android:id="@+id/title_bar_tv_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:textColor="@color/base_title_text_color"
        android:textSize="@dimen/font_size_title_right_text"
        android:visibility="gone" />

</merge>
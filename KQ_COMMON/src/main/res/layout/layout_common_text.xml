<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_item">

    <include android:id="@+id/line_top" layout="@layout/separate_line_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left_common_text_layout_label"
        android:layout_marginLeft="@dimen/margin_left_common_text_layout_label"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_common_text_layout"
            android:paddingBottom="@dimen/padding_common_text_layout"
            android:layout_weight="3"
            android:text=""
            style="@style/ThemeAttachTextView"/>

        <RelativeLayout
            android:id="@+id/rl_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_common_text_layout"
                android:paddingBottom="@dimen/padding_common_text_layout"
                android:layout_marginStart="@dimen/margin_common_text_layout_value"
                android:layout_marginEnd="@dimen/margin_common_text_layout_value"
                style="@style/ThemeCommonTextView"
                android:gravity="start" />


        </RelativeLayout>

    </LinearLayout>

    <include android:id="@+id/line_bottom" layout="@layout/separate_line_horizontal"/>

</LinearLayout>
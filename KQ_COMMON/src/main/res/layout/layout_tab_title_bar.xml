<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_head_color">

    <ImageView
        android:id="@+id/title_bar_img_btn_left"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="@dimen/height_title_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="center" />

    <android.support.design.widget.TabLayout
        android:id="@+id/title_bar_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/title_bar_img_btn_left"
        android:layout_toLeftOf="@+id/title_bar_img_btn_right"
        android:layout_toRightOf="@+id/title_bar_img_btn_left"
        android:layout_toStartOf="@+id/title_bar_img_btn_right"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/indicator_line_color"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white" />


    <ImageView
        android:id="@+id/title_bar_img_btn_right"
        android:layout_width="@dimen/height_title_bar"
        android:layout_height="@dimen/height_title_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center" />

</RelativeLayout>
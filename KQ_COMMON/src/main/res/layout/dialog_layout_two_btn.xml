<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_prompt_dialog"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bg_radius_top" />

    <TextView
        android:id="@+id/dialog_toBtn_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:text="title"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/default_text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separate_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/dialog_toBtn_btnLeft"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/ThemeCommonTextView"
            android:text="left"
            android:background="@drawable/bg_twobtndialog_left"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/separate_line_gray"/>
        <TextView
            android:id="@+id/dialog_toBtn_btnRight"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/ThemeCommonTextView"
            android:text="right"
            android:background="@drawable/bg_twobtndialog_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>
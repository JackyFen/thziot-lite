<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/line_top"
        layout="@layout/separate_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_common_text_layout_label"
        android:layout_marginStart="@dimen/margin_left_common_text_layout_label"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label"
            style="@style/ThemeAttachTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="@dimen/padding_common_text_layout"
            android:paddingTop="@dimen/padding_common_text_layout" />

        <RelativeLayout
            android:id="@+id/rl_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/et_value"
                style="@style/ThemeCommonEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_common_text_layout_value"
                android:layout_marginLeft="@dimen/margin_common_text_layout_value"
                android:layout_marginRight="@dimen/margin_common_text_layout_value"
                android:layout_marginStart="@dimen/margin_common_text_layout_value"
                android:gravity="start|center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_common_text_layout"
                android:paddingTop="@dimen/padding_common_text_layout" />

        </RelativeLayout>


    </LinearLayout>

    <include
        android:id="@+id/line_bottom"
        layout="@layout/separate_line_horizontal" />

</LinearLayout>